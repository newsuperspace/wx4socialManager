<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cc.natapp4.ddaig.domain.Member">
		<id length="50" name="uid">
			<!-- 这个foreign主键产生器与以往我一直使用的uuid和assign不一样 它的作用是共用user属性（当前ORM映射类中的一个属性叫user）的类（也是一个ORM类） 
				映射的数据库表的主键。 也就是实现了Manager“跟随”User使用相同主键的效果 -->
			<generator class="foreign">
				<param name="property">user</param>
			</generator>
		</id>
		<many-to-one cascade="save-update"
			class="cc.natapp4.ddaig.domain.cengji.MinusFirstLevel" column="mflid"
			lazy="false" name="minusFirstLevel" />
		<many-to-one cascade="save-update"
			class="cc.natapp4.ddaig.domain.cengji.ZeroLevel" column="zid" lazy="false"
			name="zeroLevel" />
		<many-to-one cascade="save-update"
			class="cc.natapp4.ddaig.domain.cengji.FirstLevel" column="flid" lazy="false"
			name="firstLevel" />
		<many-to-one cascade="save-update"
			class="cc.natapp4.ddaig.domain.cengji.SecondLevel" column="scid"
			lazy="false" name="secondLevel" />
		<many-to-one cascade="save-update"
			class="cc.natapp4.ddaig.domain.cengji.ThirdLevel" column="thid" lazy="false"
			name="thirdLevel" />
		<many-to-one cascade="save-update"
			class="cc.natapp4.ddaig.domain.cengji.FourthLevel" column="foid"
			lazy="false" name="fourthLevel" />
		<!-- 一对一的关键就是借助unique=true实现manager、member表外键的唯一性 -->
		<one-to-one class="cc.natapp4.ddaig.domain.User"   lazy="false"
			constrained="true" name="user" />
	</class>
</hibernate-mapping>
