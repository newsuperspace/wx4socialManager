<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cc.natapp4.ddaig.domain.User">
		<id name="uid" length="50">
			<!-- 设置主键产生器为uuid，则我们无需手动为持久化类的主键属性赋值，则hibernate会自动产生uuid码填充该属性及其在数据库所对应的字段 -->
			<!-- 设置主键产生器是assigned，是由于需要根据用户的uid来生成qrcode，因此需要手动创建uid -->
			<generator class="assigned"></generator>
		</id>
		<property name="openid" length="50"></property>
		<property name="cardid" length="20"></property>
		<property name="username" length="20"></property>
		<property name="community" length="20"></property>
		<property name="address" length="100"></property>
		<property name="level" length="10"></property>
		<property name="email" length="50"></property>
		<property name="score" length="20"></property>
		<property name="sex" length="5"></property>
		<property name="age" length="5"></property>
		<property name="phone" length="20"></property>
		<property name="qrcode" length="100"></property>
		<property name="ishere" type="true_false"></property>
		<property name="locked" type="true_false"></property>

		<set name="activities" table="activity_user" cascade="save-update" lazy="true">
			<key>
				<column name="uid"></column>
			</key>
			<many-to-many class="cc.natapp4.ddaig.domain.Activity"
				column="aid"></many-to-many>
		</set>

		<many-to-one name="grouping" column="gid"
			class="cc.natapp4.ddaig.domain.Grouping" cascade="save-update" lazy="false">
		</many-to-one>

		<set name="exchanges" cascade="save-update" lazy="true">
			<key>
				<column name="uid"></column>
			</key>
			<one-to-many class="cc.natapp4.ddaig.domain.Exchange" />
		</set>

		<!-- 配置层级关系 -->
		<set name="firstLevels" cascade="save-update" lazy="true">
			<key>
				<column name="uid"></column>
			</key>
			<one-to-many  class="cc.natapp4.ddaig.domain.cengji.FirstLevel"/>
		</set>
		<set name="secondLevels" cascade="save-update" lazy="true">
			<key>
				<column name="uid"></column>
			</key>
			<one-to-many  class="cc.natapp4.ddaig.domain.cengji.SecondLevel"/>
		</set>
		<set name="thirdLevels" cascade="save-update" lazy="true">
			<key>
				<column name="uid"></column>
			</key>
			<one-to-many  class="cc.natapp4.ddaig.domain.cengji.ThirdLevel"/>
		</set>
		<set name="fourthLevels" cascade="save-update" lazy="true">
			<key>
				<column name="uid"></column>
			</key>
			<one-to-many  class="cc.natapp4.ddaig.domain.cengji.FourthLevel"/>
		</set>
		
		<!-- 配置普通用户所属的层级 -->
		<many-to-one name="belongedFirstLevel"  
		column="flid" cascade="save-update"  class="cc.natapp4.ddaig.domain.cengji.FirstLevel"></many-to-one>
		<many-to-one name="belongedSecondLevel"  
		column="scid" cascade="save-update"  class="cc.natapp4.ddaig.domain.cengji.SecondLevel"></many-to-one>
		<many-to-one name="belongedThirdLevel"  
		column="thid" cascade="save-update"  class="cc.natapp4.ddaig.domain.cengji.ThirdLevel"></many-to-one>
		<many-to-one name="belongedFourthLevel"  
		column="foid" cascade="save-update"  class="cc.natapp4.ddaig.domain.cengji.FourthLevel"></many-to-one>
		
	</class>
</hibernate-mapping>