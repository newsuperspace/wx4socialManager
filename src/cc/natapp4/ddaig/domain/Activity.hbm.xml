<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cc.natapp4.ddaig.domain.Activity">
		<id name="aid" length="50">
			<!-- 
				设置主键产生器为uuid，则我们无需手动为持久化类的主键属性赋值，则hibernate会自动产生uuid码填充该属性及其在数据库所对应的字段
			 -->
			 <!-- 
			 	主键产生器设置成assigned，是有需要根据aid来生成专属qrcode，因此需要手动生成并设置到bean中
			  -->
			<generator class="assigned"></generator>
		</id>

		<property name="beginData" length="30"></property>
		<property name="endData" length="30"></property>
		<property name="score" length="20"></property>
		<property name="qrcodeUrl" length="100"></property>
		<property name="name" length="100"></property>
		<property name="description" length="200"></property>
		<property name="state" length="50"></property>
		<property name="author" length="50"></property>
		<property name="community" length="50"></property>

		<set name="users"   table="activity_user"   cascade="save-update">
			<key>
				<column name="aid"></column>
			</key>
			<many-to-many class="cc.natapp4.ddaig.domain.User" column="uid"></many-to-many>
		</set>			
	
	</class>
</hibernate-mapping>