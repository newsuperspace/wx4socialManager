<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cc.natapp4.ddaig.domain.cengji.ThirdLevel">
		<id name="foid" length="50">
			<!-- 设置主键产生器为uuid，则我们无需手动为持久化类的主键属性赋值，则hibernate会自动产生uuid码填充该属性及其在数据库所对应的字段 -->
			<!-- 设置主键产生器是assigned，是由于需要根据用户的uid来生成qrcode，因此需要手动创建uid -->
			<generator class="assigned"></generator>
		</id>
		<property name="name" length="100"></property>
		<property name="description" length="200"></property>
		<property name="level" type="integer"></property>

		<!-- 多个当前层级实例，可能同属于一个上级实例 -->
		<many-to-one name="parent" column="thid"
			class="cc.natapp4.ddaig.domain.cengji.ThirdLevel" cascade="save-update"></many-to-one>

		<!-- 一个层级实例拥有多个次层级实例 -->
		<set name="children" cascade="save-update" lazy="true">
			<key>
				<column name="foid"></column>
			</key>
			<one-to-many class="cc.natapp4.ddaig.domain.cengji.FourthLevel" />
		</set>

		<!-- 多对一，因为同一个管理者可能需要管理多个层级或团队 -->
		<many-to-one name="manager" column="uid"
			class="cc.natapp4.ddaig.domain.User" cascade="save-update" lazy="false">
		</many-to-one>

		<!-- 多个层级实例拥有同一个role -->
		<many-to-one name="role" column="rid"
			class="cc.natapp4.ddaig.domain.Role" cascade="save-update"></many-to-one>
	</class>
</hibernate-mapping>